<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/imgMainRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher" />

        <RatingBar
            android:id="@+id/rtsStart"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMainRestaurant"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgMainRestaurant"
            android:text="@string/defaultString" />

        <TextView
            android:id="@+id/txtTypeFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_alignStart="@+id/txtTitle"
            android:layout_marginTop="14dp"
            android:text="@string/defaultString" />
        <TextView
            android:id="@+id/txtPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTypeFood"
            android:layout_alignStart="@+id/txtTypeFood"
            android:layout_marginTop="14dp"
            android:text="@string/defaultString" />
        <TextView
            android:id="@+id/txtOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPlace"
            android:layout_alignStart="@+id/txtPlace"
            android:layout_marginTop="14dp"
            android:text="@string/defaultString" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
